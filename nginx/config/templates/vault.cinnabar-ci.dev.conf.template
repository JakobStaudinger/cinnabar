server {
    listen                  443 ssl;
    listen                  [::]:443 ssl;
    http2 on;

    server_name             vault.cinnabar-ci.dev;

    # SSL
    ssl_certificate         /etc/letsencrypt/live/vault.cinnabar-ci.dev/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/vault.cinnabar-ci.dev/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/vault.cinnabar-ci.dev/chain.pem;

    # security
    include                 nginxconfig.io/security.conf;

    # reverse proxy
    location / {
        proxy_pass            http://vault/;
        include               nginxconfig.io/proxy.conf;
    }

    # additional config
    include nginxconfig.io/general.conf;
}

# HTTP redirect
server {
    listen      80;
    listen      [::]:80;
    server_name vault.cinnabar-ci.dev;
    include     nginxconfig.io/letsencrypt.conf;

    location / {
        return 301 https://vault.cinnabar-ci.dev$request_uri;
    }
}