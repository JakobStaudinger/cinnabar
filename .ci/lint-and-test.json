{
  "name": "Lint & Test",
  "steps": [
    {
      "name": "clone",
      "image": "alpine",
      "commands": [
        "git init",
        "git remote add origin https://github.com/JakobStaudinger/rust-ci.git",
        "git fetch origin +refs/heads/main",
        "git checkout main"
      ]
    },
    {
      "name": "Lint",
      "image": "rust:1.77.2-alpine",
      "commands": [
        "apk add musl-dev",
        "rustup component add clippy",
        "cargo clippy -- -Dwarnings"
      ]
    },
    {
      "name": "Test",
      "image": "rust:1.77.2-alpine",
      "commands": [
        "apk add musl-dev",
        "cargo test"
      ]
    }
  ]
}